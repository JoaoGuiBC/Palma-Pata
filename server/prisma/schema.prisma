generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String   @id @default(uuid())
  adm           Boolean  @default(false)
  master        Boolean  @default(false)
  username      String
  phone_number  String
  email         String   @unique
  password      String
  street        String
  street_number Int
  district      String
  city          String
  created_at    DateTime @default(now())

  Requests    Requests[]
  ResetTokens ResetTokens[]
  @@map("users")
}

model Requests {
  id         String    @id @default(uuid())
  id_user    String
  user       Users     @relation(fields: [id_user], references: [id])
  quantity   Int
  collected  Boolean   @default(false)
  created_at DateTime  @default(now())
  ended_at   DateTime?

  @@map("requests")
}

model ResetTokens {
  token      String   @id @default(uuid())
  id_user    String
  user       Users    @relation(fields: [id_user], references: [id])
  created_at DateTime @default(now())
}
